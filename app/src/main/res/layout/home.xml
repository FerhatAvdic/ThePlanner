<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/brownbubblebg">

    <Button
        android:text="Remainders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goRemainder"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/goToDo"
        android:layout_alignParentStart="true" />

    <Button
        android:text="To Do's"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goToDo"
        android:layout_below="@+id/home_menu"
        android:layout_alignParentStart="true"
        android:layout_marginTop="94dp"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp" />

    <TextView
        android:text="Planner Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_menu"
        android:fontFamily="sans-serif"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textColor="@color/light_font"
        android:layout_marginTop="109dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>